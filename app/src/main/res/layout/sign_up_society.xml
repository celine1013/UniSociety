<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:layout_margin="@dimen/activity_horizontal_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:orientation="horizontal"
        android:layout_weight="0.00"
        android:weightSum="1">


        <ImageButton
            android:id="@+id/imbtn_back"
            android:layout_width="36dp"
            android:layout_height="53dp"
            app:srcCompat="@mipmap/ic_goback"
            android:layout_weight="0.34" />

        <TextView
            android:id="@+id/text_sign_up"
            android:layout_width="288dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center"
            android:text="@string/Text_Sign_Up"
            android:textAppearance="@style/TextAppearance.AppCompat.Display3"
            android:textSize="40dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.15"
        android:layout_gravity="start"
        android:orientation="horizontal">

        <RadioGroup
            android:id="@+id/RG_UserType"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/RB_society"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:layout_weight="1"
                android:text="Society" />

            <RadioButton
                android:id="@+id/RB_student"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:layout_weight="1"
                android:text="Student" />
        </RadioGroup>

    </LinearLayout>

    <Spinner
        android:id="@+id/society_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.12" />

    <EditText
        android:id="@+id/security_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.00"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:hint="@string/Text_Security_Code"
        android:layout_marginBottom="5dp"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/uer_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.00"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:layout_marginBottom="5dp"
        android:hint="@string/Text_User_Name" />

    <EditText
        android:id="@+id/Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.00"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_marginBottom="5dp"
        android:hint="@string/Text_Password" />

    <EditText
        android:id="@+id/Confirm_Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.00"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_marginBottom="5dp"
        android:hint="@string/Text_Confirm_Password" />

    <EditText
        android:id="@+id/Sequrity_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.00"
        android:ems="10"
        android:hint="What is your favorite color?"
        android:inputType="textPersonName"
        android:selectAllOnFocus="false"
        android:layout_marginBottom="5dp"
        android:singleLine="true" />

    <Button
        android:id="@+id/btn_sign_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.14"
        android:layout_marginBottom="5dp"
        android:text="@string/Text_Sign_Up" />
</LinearLayout>