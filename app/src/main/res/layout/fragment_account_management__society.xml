<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/accountManagement_Society"
    tools:context="com.example.celine.unisociety.AccountManagement_Society">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/MainColor"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/IB_SocietyProfilePic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:cropToPadding="true"
            android:elevation="9dp"
            android:padding="@dimen/activity_horizontal_margin"
            android:scaleType="fitCenter"
            android:src="@drawable/bitsa_logo" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:layout_marginTop="50sp"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_edit_profile"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/blue_onclickwhite"
            android:padding="@dimen/btn_padding"
            android:text="@string/Text_Edit_Profile"
            android:textColor="@color/colorWhite" />

        <Button
            android:id="@+id/btn_change_password"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_edit_profile"
            android:layout_marginTop="20dp"
            android:background="@drawable/blue_onclickwhite"
            android:padding="@dimen/btn_padding"
            android:text="@string/Text_Change_Password"
            android:textColor="@color/colorWhite" />

        <Button
            android:id="@+id/btn_manage_history"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_change_password"
            android:layout_marginTop="20dp"
            android:background="@drawable/blue_onclickwhite"
            android:padding="@dimen/btn_padding"
            android:text="@string/Text_Manage_History"
            android:textColor="@color/colorWhite" />
    </LinearLayout>

</RelativeLayout>
