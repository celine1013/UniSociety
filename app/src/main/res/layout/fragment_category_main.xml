<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Category_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.celine.unisociety.Fragment_CategoryMain">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/cat_btn_workshop"
            android:layout_width="375dp"
            android:layout_height="200dp"
            android:layout_marginBottom="20dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:cropToPadding="false"
            android:layout_gravity="center_horizontal"
            app:srcCompat="@drawable/workshopicon" />

        <ImageButton
            android:id="@+id/cat_btn_social"
            android:layout_width="375dp"
            android:layout_height="200dp"
            android:layout_marginBottom="20dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:cropToPadding="false"
            android:layout_gravity="center_horizontal"
            app:srcCompat="@drawable/socialicon" />

        <ImageButton
            android:id="@+id/cat_btn_party"
            android:layout_width="375dp"
            android:layout_height="200dp"
            android:layout_marginBottom="20dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:cropToPadding="false"
            android:layout_gravity="center_horizontal"
            app:srcCompat="@drawable/partyicon" />

        <ImageButton
            android:id="@+id/cat_btn_food"
            android:layout_width="375dp"
            android:layout_height="200dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:cropToPadding="false"
            android:layout_gravity="center_horizontal"
            app:srcCompat="@drawable/foodicon" />

    </LinearLayout>

</ScrollView>
