<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item

        android:state_pressed="true">
        <shape>
            <solid
                android:color="#00BCD4"></solid>
            <stroke
                android:color="#00BCD4"
                android:width="2dp"></stroke>
            <corners
                android:radius="90dp"></corners>
            <padding
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"
                android:bottom="10dp"></padding>
        </shape>

    </item>

    <item>
    <shape>
        <solid
            android:color="#fff"></solid>
        <stroke
            android:color="#00BCD4"
            android:width="2dp"></stroke>
        <corners
            android:radius="90dp"></corners>
        <padding
            android:left="10dp"
            android:right="10dp"
            android:top="10dp"
            android:bottom="10dp"></padding>
    </shape>
    </item>
</selector>